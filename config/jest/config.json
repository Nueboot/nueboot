{
  "cacheDirectory": "<rootDir>/.jest",
  "clearMocks": true,
  "coveragePathIgnorePatterns": ["<rootDir>/config/jest/", "/node_modules/"],
  "coverageReporters": ["text", "text-summary", "html"],
  "globals": {
    "ts-jest": {
      "useBabelrc": true
    }
  },
  "moduleFileExtensions": ["ts", "tsx", "json", "js", "jsx"],
  "moduleNameMapper": {
    "\\.(css|less)$": "identity-obj-proxy"
  },
  "modulePathIgnorePatterns": ["<rootDir>/coverage, <rootDir>/dist"],
  "modulePaths": ["<rootDir>/src"],
  "rootDir": "../..",
  "setupFilesAfterEnv": ["<rootDir>/config/jest/framework.ts"],
  "snapshotSerializers": ["enzyme-to-json/serializer"],
  "testURL": "http://localhost/",
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "testMatch": ["**/*.(test|spec).(ts|tsx|js)"]
}
